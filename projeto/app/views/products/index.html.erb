<center>
<p id="notice"><%= notice %></p>

<div class= "devise-container">
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td> <div class='short-text'><%= product.desc %></div></td>
        <td><%= link_to 'Show', category_product_path(product.cat_id,product) %></td>

        <% if can? :create, Product %>
          <td><%= link_to 'Edit', edit_category_product_path(product.cat_id,product) %></td>
        <% end %>

        <% if can? :create, Product %>
        <td><%= link_to 'Destroy', category_product_path(product.cat_id, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', dashboard_index_path %> |
<% if can? :create, Product %>
<%= link_to 'New Product', new_category_product_path %>
<% end %>
</div>
</center>