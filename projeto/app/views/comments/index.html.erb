<center>
<p id="notice"><%= notice %></p>
<div class= "devise-container">
<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Com</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.com %></td>
        <td><%= link_to 'Show', product_comments_path(comment.product_id, comment) %></td>
        <td><%= link_to 'Edit', edit_product_comment_path(comment.product_id, comment) %></td>
        <td><%= link_to 'Destroy', product_comment_path(comment.product_id, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', dashboard_index_path %> |
<%= link_to 'New Comment', new_product_comment_path %>
</div>
</center>